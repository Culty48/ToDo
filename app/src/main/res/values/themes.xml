<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDo.Dark" parent="Theme.AppCompat.DayNight">

        <!-- Dark Theme. -->
        <item name="android:textColor">@color/textWhite</item>

        <item name="android:background">@color/backBlack</item>

        <item name="android:textSize">20sp</item>



    </style>

    <style name="Theme.ToDo.Dark.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/buttonBlack</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="Theme.ToDo.Dark.Text" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">32sp</item>
        <item name="android:textColorLink">@color/backBlack</item>
        <item name="android:textColorHighlight">@color/backBlack</item>
    </style>


    <style name="Theme.ToDo.Dark.EntryText0" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:background">#DD7F7F</item>



    </style>


    <style name="Theme.ToDo.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
</resources>